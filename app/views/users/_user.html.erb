<h2>Users info</h2>

<table>
  <thead>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
    </tr>
  </thead>

  <tbody>
    <tr>
     <th>name</th>
     <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th colspan="2">
        <% if @user.id == current_user.id %>
          <p><%= link_to "edit", edit_user_path(@user) %></p>
        <% end %>
    </tr>
  </tbody>
</table>
